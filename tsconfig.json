{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "module": "NodeNext",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "resolvePackageJsonExports": true,
    "resolvePackageJsonImports": true,
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "exclude": ["server", "client", "web", "node_modules"]
}
